{
  "name": "vscode-dialog-debugger",
  "displayName": "Debugger for Dialogs",
  "description": "This extension provides the ability to debug Microsoft Bot Framework declarative dialog flows.",
  "author": "Microsoft",
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "debuggers",
    "bot"
  ],
  "icon": "icon.png",
  "preview": true,
  "version": "0.0.5",
  "publisher": "Microsoft",
  "license": "SEE LICENSE file",
  "engines": {
    "vscode": "^1.0.0"
  },
  "repository": "https://github.com/microsoft/botbuilder",
  "main": "./src/js/extension",
  "activationEvents": [
    "onDebug"
  ],
  "scripts": {
    "build": "node node_modules/typescript/bin/tsc --project src/ts/tsconfig.json"
  },
  "devDependencies": {
    "typescript": "3.4.3",
    "vscode": "1.1.33",
    "@types/node": "11.13.4"
  },
  "contributes": {
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".dialog"
        ]
      }
    ],
    "debuggers": [
      {
        "type": "json",
        "label": "Bot Framework Dialog Debugger",
        "languages": [
          "json"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "command",
              "args"
            ],
            "properties": {
              "command": {
                "type": "string",
                "description": "The command to launch the Bot."
              },
              "args": {
                "type": "array",
                "description": "The arguments to launch the Bot."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "json",
            "request": "attach",
            "name": "Attach to Bot",
            "debugServer": 4712
          },
          {
            "type": "json",
            "request": "launch",
            "name": "Launch .NET Core Bot",
            "command": "dotnet",
            "args": [
              "run",
              "--",
              "--debugport",
              "0"
            ]
          }
        ],
        "configurationSnippets": [
          {
            "label": "Bot: Attach Configuration",
            "description": "A new configuration for attaching to a bot web service process.",
            "body": {
              "type": "json",
              "request": "attach",
              "name": "Attach to Bot",
              "debugServer": 4712
            }
          },
          {
            "label": "Bot: Launch .NET Core Configuration",
            "description": "A new configuration for launching a bot web service process.",
            "body": {
              "type": "json",
              "request": "launch",
              "name": "Launch .NET Core Bot",
              "command": "dotnet",
              "args": [
                "run",
                "--",
                "--debugport",
                "0"
              ]
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "json"
      }
    ]
  }
}
